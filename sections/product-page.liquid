<script src="{{ 'product-page-jquery.js' | asset_url }}" type="module" defer="defer"></script>
{% style %}

  {% for color in product.metafields.custom.product_colors.value %}
    .color-btn-label[for="color-{{forloop.index}}"] {
        background-color: {{ color }}
    }
