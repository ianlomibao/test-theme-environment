      "type": "checkbox",
      "id": "show_swatch_images",
      "default": true,
      "label": "Show variant image inside color swatch buttons"
    },
    {
      "type": "checkbox",
      "id": "show_swatch_colors",
      "default": true,
      "label": "Show defined colors from the color dictionary"
    }
  ]
}
{% endschema %}